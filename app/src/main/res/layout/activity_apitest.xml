<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.timi.seulseul.presentation.apitest.ApiTestViewModel" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- DELETE Section -->
            <EditText
                android:id="@+id/delete_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="id to DELETE"
                android:text="@={viewModel.idDelete}"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELETE User" />

            <!-- POST Section -->
            <EditText
                android:id="@+id/post_edittext_userid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="User ID to POST"
                android:text="@={viewModel.userIdPost}"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/post_edittext_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="ID to POST"
                android:text="@={viewModel.idPost}"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/post_edittext_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Title to POST"
                android:text="@={viewModel.titlePost}"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/post_edittext_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Body to POST"
                android:text="@={viewModel.bodyPost}"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/post_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POST User" />

            <!-- PATCH Section -->
            <EditText
                android:id="@+id/patch_edittext_userid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="User ID to PATCH"
                android:text="@={viewModel.userIdPatch}"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/patch_edittext_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="ID to PATCH"
                android:text="@={viewModel.idPatch}"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/patch_edittext_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Title to PATCH"
                android:text="@={viewModel.titlePatch}"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/patch_edittext_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Body to PATCH"
                android:text="@={viewModel.bodyPatch}"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/patch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PATCH User" />

            <!-- GET Section -->

            <Button
                android:id="@+id/get_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GET User" />

            <TextView
                android:id="@+id/get_userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.selectedUser.userId}" />

            <TextView
                android:id="@+id/get_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.selectedUser.id}" />

            <TextView
                android:id="@+id/get_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.selectedUser.title}" />

            <TextView
                android:id="@+id/get_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.selectedUser.body}"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</layout>
